<%# <%= render "shared/second-header"%>

<div class='transaction-contents'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      Purchase confirmation
    </h1>
    <%# 購入内容の表示 %>
    <div class='buy-item-info'>
      <%= image_tag @item.image, class: 'buy-item-img' %>
      <div class='buy-item-right-content'>
        <h2 class='buy-item-text'>
          <%= @item.name %>
        </h2>
        <div class='buy-item-price'>
          <p class='item-price-text'>¥<%= @item.price %></p>
          <p class='item-price-sub-text'><%= @item.shipping_cost.name %></p>
        </div>
      </div>
    </div>
    <%# /購入内容の表示 %>

    <%# 支払額の表示 %>
    <div class='item-payment'>
      <h1 class='item-payment-title'>
        Price
      </h1>
      <p class='item-payment-price'>
        ¥<%= @item.price %>
      </p>
    </div>
    <%# /支払額の表示 %>

    <%= form_with model: @order_destination, url: item_orders_path, id: 'charge-form', class: 'transaction-form-wrap',local: true do |f| %>
    <%# カード情報の入力 %>
    <div class='credit-card-form'>
      <h1 class='info-input-haedline'>
        Credit Card information 
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label for="number">Card information</label>
          <span class="indispensable">required</span>
        </div>
        <div id='number' class="input-default">
        
    
        </div>
        <div class='available-card'>
          <%= image_tag 'card-visa.gif', class: 'card-logo'%>
          <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
          <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
          <%= image_tag 'card-amex.gif', class: 'card-logo'%>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label for="exp-date">Expiration date</label>
          <span class="indispensable">required</span>
        </div>
        <div class='input-expiration-date-wrap'>
          <div id='exp-date' class="input-default">
    
        </div>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label for="cvc">security code</label>
          <span class="indispensable">required</span>
        </div>
        <div id='cvc' class="input-default">
    
       </div>
      </div>
    </div>
    <%# /カード情報の入力 %>
    
    <%# 配送先の入力 %>
    <div class='shipping-address-form'>
    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Name </label>
          <span class="indispensable">required</span>
        </div>
        <%= f.text_field :name, class:"input-default", id:"postal-code", placeholder:"example）123-4567"  %>
      </div>
    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Size </label>
          <span class="indispensable">required</span>
        </div>
        <%= f.collection_select(:size_id, Size.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
      <h1 class='info-input-haedline'>
        Shipping info 
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Postal code</label>
          <span class="indispensable">required</span>
        </div>
        <%= f.text_field :postal_code, class:"input-default", id:"postal-code", placeholder:"example）123-4567", maxlength:"8" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Prefecture</label>
          <span class="indispensable">required</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">City</label>
          <span class="indispensable">required</span>
        </div>
        <%= f.text_field :city, class:"input-default", id:"city", placeholder:"example）Yokohama city sho ward"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Block</label>
          <span class="indispensable">required</span>
        </div>
        <%= f.text_field :block, class:"input-default", id:"addresses", placeholder:"example）Aoyama 1-1-1"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Building</label>
          <span class="form-any">Optional</span>
        </div>
        <%= f.text_field :building, class:"input-default", id:"building", placeholder:"example）Yanagi building 103"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Phone number</label>
          <span class="indispensable">required</span>
        </div>
        <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"example）09012345678",maxlength:"11"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Email</label>
          <span class="indispensable">required</span>
        </div>
        <%= f.text_field :email, class:"input-default", id:"phone-number", placeholder:"example）hellp@gmail.com"%>
      </div>
    </div>
    <%# /配送先の入力 %>
    <div class='buy-btn'>
      <%= f.submit "Purchase" ,class:"buy-red-btn", id:"button" %>
    </div>
    <% end %>
  </div>
</div>
<%# <%= render "shared/second-footer"%>